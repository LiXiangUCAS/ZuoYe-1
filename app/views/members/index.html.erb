
<header class="am-topbar am-topbar-fixed-top">
  <div class="am-container">
    <h1 class="am-topbar-brand">
      <a href="#">会员信息网</a>
    </h1>

    <div class="am-collapse am-topbar-collapse" id="collapse-head">
      <ul class="am-nav am-nav-pills am-topbar-nav">
        <li><%= link_to '首页', controller: 'welcome' %></li>
        <li class="am-active"><%= link_to '会员列表', controller: 'members' %></li>
      </ul>

    </div>
  </div>
</header>


<div class="detail">
  <div class="am-g am-container">
    <div class="am-u-lg-12">
      <h2 class="detail-h2">会员信息列表</h2>

      <div class="am-g">
        <table class="am-table am-table-bordered am-table-radius am-table-striped am-table-centered">
  <tr>
    <th>#</th>
    <th>姓名</th>
    <th>地址</th>
    <th>年龄</th>
    <th colspan="3">选项</th>
  </tr>
 
  <% @time=0 %>
  <% @members.each do |member| %>
    <% @time+=1 %>
    <tr>
      <td><%= @time %></td>
      <td><%= member.name %></td>
      <td><%= member.address %></td>
      <td><%= member.age %></td>
      <td><%= link_to '详情', member_path(member), class: "am-btn am-btn-default am-round" %></td>
      <td><%= link_to '编辑', edit_member_path(member), class: "am-btn am-btn-success am-round" %></td>
      <td>
        <%= link_to '删除', member_path(member),
            method: :delete,
            data: { confirm: '你确定要删除该会员吗?' },
            class: "am-btn am-btn-danger am-round"
        %>
      </td>
    </tr>
  <% end %>
</table>

      </div>
    </div>
  </div>
</div>

<div class="hope">
  <div class="am-g am-container">
<%= link_to '新建会员', new_member_path, class: "am-btn am-btn-primary" %>
<%= link_to '返回首页', {controller: 'welcome', action: 'index'}, class: "am-btn am-btn-danger" %>

  </div>
</div>